<%= form_with(model: section, local: true) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :section_name %>
  </div>

  <div class="field">
    <%= form.label :professor_id %>
    <%= collection_select(:section, :professor_id, @professors, :id, :name, {:prompt => false}) %>
  </div>

  <div class="field">
    <%= form.label :course_id %>
    <%= collection_select(:section, :course_id, @courses, :id, :name, {:prompt => false}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
